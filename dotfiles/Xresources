! Increase scrollback buffer size
URxvt.saveLines: 100000

! Disable scrollbar
URxvt.scrollBar: false

! Do not add the output of programs in the secondary screen to the scrollback buffer
! (for example, when scrolling down within less)
URxvt.secondaryScroll: false

! Disable annoying Ctrl-Shift binding
URxvt.iso14755: false
URxvt.iso14755_52: false

! Disable printing the terminal contents when pressing PrintScreen
URxvt.print-pipe: "cat > /dev/null"

! Set font
URxvt.font: xft:DejaVu Sans Mono:size=9:antialias=true

! Extensions
URxvt.perl-ext-common: searchable-scrollback,resize-font

! resize-font extension
! Set keybindings for changing font size on the fly
URxvt.keysym.C-0: resize-font:reset

! Do not automatically use high intensity colors for bold
URxvt.intensityStyles: false

! Set color theme
! special
*.foreground:  #b2b2b2
*.background:  #080808
*.cursorColor: #b2b2b2
! black
*.color0:      #000000
*.color8:      #7f7f7f
! red
*.color1:      #cd0000
*.color9:      #ff0000
! green
*.color2:      #00cd00
*.color10:     #00ff00
! yellow
*.color3:      #cdcd00
*.color11:     #ffff00
! blue
*.color4:      #0077ed
*.color12:     #009cff
! magenta
*.color5:      #ea61da
*.color13:     #ff00ff
! cyan
*.color6:      #00cdcd
*.color14:     #00ffff
! white
*.color7:      #e5e5e5
*.color15:     #ffffff
